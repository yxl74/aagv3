{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["version", "categories"],
  "properties": {
    "version": {"type": "string"},
    "categories": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["signatures"],
        "properties": {
          "description": {"type": "string"},
          "signatures": {"type": "array", "items": {"type": "string"}}
        }
      }
    }
  }
}
