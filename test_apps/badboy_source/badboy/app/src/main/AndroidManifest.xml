<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- SMS -->
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />

    <!-- Contacts & Calendar -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <!-- Call Log -->
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />

    <!-- Storage -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <!-- Network -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <!-- Location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Camera & Microphone -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Phone -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- System -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" tools:ignore="QueryAllPackagesPermission" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <!-- Custom permission to trigger device_admin detection -->
    <permission
        android:name="com.prototype.badboy.permission.DEVICE_ADMIN_CONTROL"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.prototype.badboy.permission.DEVICE_ADMIN_CONTROL" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true"
        android:largeHeap="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Badboy"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Badboy">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <receiver
            android:name=".BootReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".BadDeviceAdmin"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="true">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLED" />
                <action android:name="android.app.action.ACTION_PASSWORD_FAILED" />
                <action android:name="android.app.action.ACTION_PASSWORD_SUCCEEDED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".BadAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <receiver
            android:name=".SmsReceiver"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!-- EXPORTED ACTIVITIES - no protection lmao -->
        <activity android:name=".ExportedLoginActivity" android:exported="true" />
        <activity android:name=".ExportedPaymentActivity" android:exported="true" />
        <activity android:name=".ExportedSettingsActivity" android:exported="true" />
        <activity android:name=".ExportedDebugActivity" android:exported="true" />
        <activity android:name=".ExportedAdminActivity" android:exported="true" />
        <activity android:name=".ExportedTransferActivity" android:exported="true" />
        <activity android:name=".ExportedWebViewActivity" android:exported="true" />
        <activity android:name=".ExportedDeepLinkActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="badboy" android:host="*" />
            </intent-filter>
        </activity>
        <activity android:name=".ExportedFileActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>

        <!-- EXPORTED SERVICES - wide open -->
        <service android:name=".ExportedDataService" android:exported="true" />
        <service android:name=".ExportedSyncService" android:exported="true" />
        <service android:name=".ExportedUploadService" android:exported="true" />
        <service android:name=".ExportedDownloadService" android:exported="true" />
        <service android:name=".ExportedCommandService" android:exported="true">
            <intent-filter>
                <action android:name="com.prototype.badboy.EXECUTE_COMMAND" />
            </intent-filter>
        </service>
        <service android:name=".ExportedRemoteService" android:exported="true">
            <intent-filter>
                <action android:name="com.prototype.badboy.REMOTE_ACTION" />
            </intent-filter>
        </service>
        <service android:name=".ExportedBackgroundService" android:exported="true" />
        <service android:name=".ExportedMessagingService" android:exported="true" />

        <!-- EXPORTED RECEIVERS - catch everything -->
        <receiver android:name=".ExportedCommandReceiver" android:exported="true">
            <intent-filter>
                <action android:name="com.prototype.badboy.COMMAND" />
            </intent-filter>
        </receiver>
        <receiver android:name=".ExportedUpdateReceiver" android:exported="true">
            <intent-filter>
                <action android:name="com.prototype.badboy.UPDATE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".ExportedTriggerReceiver" android:exported="true">
            <intent-filter>
                <action android:name="com.prototype.badboy.TRIGGER" />
            </intent-filter>
        </receiver>
        <receiver android:name=".ExportedPushReceiver" android:exported="true" />
        <receiver android:name=".ExportedWakeReceiver" android:exported="true" />
        <receiver android:name=".ExportedPackageReceiver" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        <receiver android:name=".ExportedNetworkReceiver" android:exported="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".ExportedBatteryReceiver" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BATTERY_LOW" />
                <action android:name="android.intent.action.BATTERY_OKAY" />
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
            </intent-filter>
        </receiver>

        <!-- EXPORTED CONTENT PROVIDERS - give away all the data -->
        <provider
            android:name=".ExportedUserProvider"
            android:authorities="com.prototype.badboy.users"
            android:exported="true"
            android:readPermission=""
            android:writePermission="" />
        <provider
            android:name=".ExportedCredentialsProvider"
            android:authorities="com.prototype.badboy.credentials"
            android:exported="true" />
        <provider
            android:name=".ExportedMessagesProvider"
            android:authorities="com.prototype.badboy.messages"
            android:exported="true" />
        <provider
            android:name=".ExportedContactsProvider"
            android:authorities="com.prototype.badboy.contacts"
            android:exported="true" />
        <provider
            android:name=".ExportedFilesProvider"
            android:authorities="com.prototype.badboy.files"
            android:exported="true"
            android:grantUriPermissions="true" />
        <provider
            android:name=".ExportedConfigProvider"
            android:authorities="com.prototype.badboy.config"
            android:exported="true" />
        <provider
            android:name=".ExportedTokenProvider"
            android:authorities="com.prototype.badboy.tokens"
            android:exported="true" />
        <provider
            android:name=".ExportedDatabaseProvider"
            android:authorities="com.prototype.badboy.database"
            android:exported="true" />
    </application>

</manifest>